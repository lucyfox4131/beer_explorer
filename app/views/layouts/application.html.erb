<!DOCTYPE html>
<html>
<head>
  <title>BeerExplorer</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">BeerExplorer</a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
          <li><%= link_to "Signed in as #{current_user.name}", dashboard_path %></li>
          <li><%= link_to "Sign Out", signout_path, id: "sign_out" %></li>
          <% else %>
          <li><%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Start Exploring <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="/beers">Beers</a></li>
              <li><a href="/breweries">Breweries</a></li>
              <li><a href="/styles">Styles</a></li>
              <% if current_user %>
                <li role="separator" class="divider"></li>
                <li><a href="/dashboard">Profile</a></li>
              <% end %>
              </ul>
            </li>
          </ul>
        </div>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <% flash.each do |type, message| %>
  <div class="alert alert-<%= type %> text-center alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span></button>
      <%= sanitize(message) %>
    </div>

    <% end %>

    <%= yield %>

  </body>
  <%= javascript_include_tag 'application' %>
  </html>
